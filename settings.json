{
  //==COMMON==
  //general settings

  //editor
  "editor.fontSize": 16,
	"editor.guides.bracketPairs": false,
  "editor.find.addExtraSpaceOnTop": false,
  "editor.mouseWheelZoom": true,
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.tabSize": 2,
  "editor.wordWrap": "off",
  "editor.stickyScroll.enabled": true,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.formatOnSave": false,
  "editor.suggest.insertMode": "replace",
  "editor.linkedEditing": true,
  "editor.fontLigatures": false,
  "editor.quickSuggestionsDelay": 0,




  //explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,

  //workbench
  "workbench.colorTheme": "One Dark Pro Darker",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 10,
  "workbench.editor.tabActionLocation": "right",

  //extensions
  "extensions.ignoreRecommendations": true,
  "extensions.closeExtensionDetailsOnViewChange": true,

  //window
  "window.zoomLevel": 2,





//=========================================================================
//Telemetry
  "telemetry.enableCrashReporter": false,
  "telemetry.telemetryLevel": "false",
  "telemetry.enableTelemetry": false,
  "editor.experimental.treeSitterTelemetry": false,
  "python.analysis.reportExtraTelemetry": false,





  //=========================================================================
  //EXTENSIONS


  //==VIM==
  //general settings
  "vim.leader": "<space>",
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.enableNeovim": false,
  "vim.highlightedyank.enable": true,
  "vim.cursorStylePerMode.insert": "line",
  "vim.highlightedyank.color": "rgba(180, 180, 180, 0.4)", 
  "vim.highlightedyank.textColor": "white",

  "vim.handleKeys": {
      "<C-a>": false,
      "<C-f>":  false,
      "<C-p>": false,
      "<C-z>": false,
    },

  "extensions.experimental.affinity": {
      "vscodevim.vim": 1
    },

  //plugins
  "vim.easymotion": true,
  "vim.camelCaseMotion.enable": true,
  "vim.sneak": true,


  //keybindings
  "vim.normalModeKeyBindingsNonRecursive": [
      // switch b/w buffers
      { 
        "before": ["<S-h>"],
        "commands": [":bprevious"] 
      },

      {
       "before": ["<S-l>"],
       "commands": [":bnext"] 
      },

      // splits
      { 
        "before": ["leader", "v"],
        "commands": [":vsplit"] 
      },

      { 
        "before": ["leader", "s"],
        "commands": [":split"] 
      },


      // panes
      {
        "before": ["leader", "h"],
        "commands": ["workbench.action.focusLeftGroup"]
      },

      {
        "before": ["leader", "j"],
        "commands": ["workbench.action.focusBelowGroup"]
      },

      {
        "before": ["leader", "k"],
        "commands": ["workbench.action.focusAboveGroup"]
      },

      {
        "before": ["leader", "l"],
        "commands": ["workbench.action.focusRightGroup"]
      },


      //extras
      { 
        "before": ["leader", "w"],
        "commands": [":w!"] 
      },

      { 
        "before": ["leader", "q"],
        "commands": [":q!"] 
      },

      { 
        "before": ["leader", "x"],
        "commands": [":x!"] 
      },

      {
        "before": ["[", "d"],
        "commands": ["editor.action.marker.prev"]
      },

      {
        "before": ["]", "d"],
        "commands": ["editor.action.marker.next"]
      },

      {
        "before": ["<leader>", "c", "a"],
        "commands": ["editor.action.quickFix"]
      },

      { 
        "before": ["leader", "f"],
        "commands": ["workbench.action.quickOpen"] 
      },

      {
        "before": ["leader", "p"],
        "commands": ["editor.action.formatDocument"] 
      },

      {
        "before": ["g", "h"],
        "commands": ["editor.action.showDefinitionPreviewHover"]
      },
    ],


    "vim.visualModeKeyBindings": [
      // Stay in visual mode while indenting
      {
        "before": ["<"],
        "commands": ["editor.action.outdentLines"] 
      },

      { 
        "before": [">"],
        "commands": ["editor.action.indentLines"] 
      },

      // Move selected lines while staying in visual mode
      { 
        "before": ["J"],
        "commands": ["editor.action.moveLinesDownAction"] 
      },

      { 
        "before": ["K"],
        "commands": ["editor.action.moveLinesUpAction"] 
      },

      // toggle comment selection
      { 
        "before": ["leader", "c"],
        "commands": ["editor.action.commentLine"] 
      }

    ],

    // "vim.insertModeKeyBindings": [],



  //==NEOVIM PLUGINS==
  //general settings




  //dont add anything below this line
  //==APPENDED SETTINGS==


}
